<Page
    x:Class="Magic_Card_Search.AdvancedSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Magic_Card_Search"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="CardModelTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Grid.Row="1" VerticalAlignment="Top">
                    <Image.Width>30</Image.Width>
                    <Image.Height>50</Image.Height>
                    <Image.Source>
                        <BitmapImage UriSource="{Binding Url}" />
                    </Image.Source>
                </Image>
                <TextBlock Grid.Column="0" 
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Text="{Binding Name, Mode=OneWay}"></TextBlock>
                <TextBlock Grid.Column="1" 
                           Grid.Row="0"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Text="{Binding Mana, Mode=OneWay}"></TextBlock>
                <TextBlock Grid.Column="2"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Text="{Binding Type, Mode=OneWay}"></TextBlock>
                <TextBlock Grid.Column="3" 
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Text="{Binding Color, Mode=OneWay}"></TextBlock>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Page.TopAppBar>
        <CommandBar>
            <AppBarButton x:Name="btnBackToHomePage"  
                          Content="Back" 
                          Icon="Back"
                          Click="BackButton_Click"/>
        </CommandBar>
    </Page.TopAppBar>

    <Page.DataContext>
        <local:CardController/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="109"/>
            <RowDefinition Height="94.4" />
            <RowDefinition Height="91.2"/>
            <RowDefinition Height="83.2"/>
            <RowDefinition Height="68*" />
            <RowDefinition Height="555*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1" 
                   Grid.ColumnSpan="2" 
                   FontSize="42" 
                   Text="Advanced Search" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Height="56" 
                   Width="318"/>

        <Button Grid.Row="1" 
                Grid.Column="3"
                Width="100"
                Height="50"
                Content="Search" 
                HorizontalAlignment="Center" 
                Command="{Binding SearchCommand, Mode=TwoWay}"/>

        <TextBlock Grid.Row="2" 
                   Grid.Column="0" 
                   Text="Color: "
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="right"
                   Height="20"/>
        <TextBlock Grid.Row="3" 
                   Grid.Column="0"
                   Text="Converted Mana Cost:" 
                   TextAlignment="Center" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Height="20"  />
        <TextBlock Grid.Row="2" 
                   Grid.Column="2" 
                   Text="Type: " 
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Height="20"/>
        <TextBlock Grid.Row="3" 
                   Grid.Column="2" 
                   Text="Rarity: " 
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Height="20"/>
        <ComboBox x:Name="cboColor" Grid.Row="2" 
                  Grid.Column="1" 
                  Grid.ColumnSpan="1"
                  SelectedItem="{Binding SelectedColor_ComboBoxItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                  PlaceholderText=""
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" Height="32" Width="100"  >
            <ComboBoxItem Content=""/>
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Black"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Green"/>
        </ComboBox>

        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Height="32"
                 Width="100"
                 Text="{Binding SearchConvertedManaCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 PlaceholderText="" 
                 InputScope="Number"
                 TextAlignment="Center"/>
        <TextBox x:Name="txbType"
                 Grid.Row="2" 
                 Grid.Column="3" 
                 Text="{Binding SearchType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32"
                 Width="100"
                 PlaceholderText="" 
                 TextAlignment="Center"/>
        <ComboBox x:Name="cboRarity" Grid.Row="3" 
                  Grid.Column="3" 
                  SelectedValue="{Binding SelectedRarity_ComboBoxItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center" 
                  PlaceholderText="" 
                  Height="32" 
                  Width="100" >
            <ComboBoxItem Content=""/>
            <ComboBoxItem Content="Common"/>
            <ComboBoxItem Content="Uncommon"/>
            <ComboBoxItem Content="Rare"/>
            <ComboBoxItem Content="Mythic Rare"/>
        </ComboBox>
        <TextBlock x:Name="tboxName"
                   HorizontalAlignment="Center"
                   Text="Name"
                   Width="210"
                   FontSize="20"
                   Grid.Row="4"
                   Height="60"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   HorizontalTextAlignment="Center"/>
        <TextBlock x:Name="tboxMana"
                   HorizontalAlignment="Center"
                   Text="Mana"
                   Width="210"
                   Height="60"
                   FontSize="20"
                   Grid.Row="4"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Grid.Column="1" />
        <TextBlock x:Name="tboxColor"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Text="Color"
                   Width="210"
                   Height="60"
                   FontSize="20"
                   Grid.Row="4" 
                   Grid.Column="3" />
        <TextBlock x:Name="tboxType"
                   Text="Type"
                   Width="210"
                   FontSize="20"
                   Grid.Row="4"
                   Height="60"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Grid.Column="2" />
        <StackPanel Grid.Row="5"
                    Grid.ColumnSpan="4"
                    Grid.RowSpan="4">
            <ListView FontSize="24"
                      SelectedItem="{Binding SelectedCard, Mode=TwoWay}"
                      ItemTemplate="{StaticResource CardModelTemplate}"
                      ItemsSource="{Binding Cards}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
