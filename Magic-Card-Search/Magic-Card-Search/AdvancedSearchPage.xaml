<Page
    x:Class="Magic_Card_Search.AdvancedSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Magic_Card_Search"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="CardModelTemplate">
            <StackPanel Orientation="Horizontal">
                <Image>
                    <Image.Width>30</Image.Width>
                    <Image.Height>50</Image.Height>
                    <Image.Source>
                        <BitmapImage UriSource="{Binding Url}" />
                    </Image.Source>
                </Image>
                <TextBlock Text="{Binding Name, Mode=OneWay}"
                           Width="300"></TextBlock>
                <TextBlock Text="{Binding Mana, Mode=OneWay}"
                           Width="300"></TextBlock>
                <TextBlock Text="{Binding Type, Mode=OneWay}"
                           Width="300"></TextBlock>
                <TextBlock Text="{Binding Color, Mode=OneWay}"
                           Width="300"></TextBlock>
                <ItemsControl  ItemsSource="{Binding Name, Mode=OneWay}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Page.TopAppBar>
        <CommandBar>
            <AppBarButton x:Name="btnBackToHomePage"  
                          Content="Back" 
                          Icon="Back"
                          Click="BackButton_Click"/>
        </CommandBar>
    </Page.TopAppBar>

    <Page.DataContext>
        <local:CardController/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="109"/>
            <RowDefinition Height="94.4" />
            <RowDefinition Height="91.2"/>
            <RowDefinition Height="83.2"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1" 
                   Grid.ColumnSpan="2" 
                   FontSize="42" 
                   Text="Advanced Search" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" Height="56" Width="318" />

        <Button Grid.Row="1" 
                Grid.Column="3"
                Width="200"
                Height="50"
                Content="Search" 
                HorizontalAlignment="Center" />

        <TextBlock Grid.Row="2" 
                   Grid.Column="0" 
                   Text="Color: "
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="right"
                   Height="20"  />
        <TextBlock Grid.Row="3" 
                   Grid.Column="0"
                   Text="Converted Mana Cost:" 
                   TextAlignment="Center" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Height="20"  />
        <TextBlock Grid.Row="2" 
                   Grid.Column="2" 
                   Text="Type: " 
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Height="20"  />
        <TextBlock Grid.Row="3" 
                   Grid.Column="2" 
                   Text="Rarity: " 
                   TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Height="20" />
        <ComboBox Grid.Row="2" 
                  Grid.Column="1" 
                  Grid.ColumnSpan="1"
                  SelectedItem="{Binding SelectedColor_ComboBoxItem, Mode=TwoWay}" 
                  PlaceholderText=""
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" Height="32" Width="70" >
            <ComboBoxItem Content="Any"/>
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Black"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Green"/>
        </ComboBox>

        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Margin="137.8,24.4,137.4,24.8" 
                 Text="{Binding SearchConvertedManaCost}"
                 PlaceholderText="" 
                 InputScope="Number"
                 TextAlignment="Center"/>
        <TextBox x:Name="txbType"
                 Grid.Row="2" 
                 Grid.Column="3" 
                 Text="{Binding SearchType}"
                 Margin="137.6,24.4,136.8,24.8" 
                 PlaceholderText="" 
                 TextAlignment="Center"/>
        <ComboBox Grid.Row="3" 
                  Grid.Column="3" 
                  SelectedValue="{Binding SelectedRarity_ComboBoxItem, Mode=TwoWay}" 
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center" 
                  PlaceholderText="" 
                  Height="32" 
                  Width="70" >
            <ComboBoxItem Content="Any"/>
            <ComboBoxItem Content="Common"/>
            <ComboBoxItem Content="Uncommon"/>
            <ComboBoxItem Content="Rare"/>
            <ComboBoxItem Content="Mythic Rare"/>
        </ComboBox>
        <ListView x:Name="lbxAdvancedSearchResults" 
                  Margin="10,6.2,10,10" 
                  Grid.Row="4" 
                  Grid.Column="0"
                  Grid.ColumnSpan="4"
                  Background="DarkGray" 
                  FontSize="24"
                  SelectedItem="{Binding SelectedCard, Mode=TwoWay}"
                  ItemTemplate="{StaticResource CardModelTemplate}"
                  ItemsSource="{Binding Cards}">
        </ListView>
    </Grid>
</Page>
